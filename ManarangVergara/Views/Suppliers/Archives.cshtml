@using ManarangVergara.Helpers
@model PaginatedList<ManarangVergara.Models.SupplierListViewModel>
@{
    ViewData["Title"] = "Archived Suppliers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-muted"><i class="fa-solid fa-trash-can me-2"></i>Archived Suppliers</h2>
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="fa-solid fa-arrow-left me-2"></i>Back to Active List
    </a>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body py-2">
        <form asp-action="Archives" method="get" class="row g-2 align-items-center">
            <div class="col-auto flex-grow-1">
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fa-solid fa-magnifying-glass"></i></span>
                    <input type="text" name="searchString" class="form-control" placeholder="Search archives..." value="@ViewData["CurrentFilter"]" />
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-outline-secondary">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle text-muted">
            <thead class="table-light">
                <tr>
                    <th>Supplier Name</th>
                    <th>Contact Info</th>
                    <th>Products Linked</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Name</td>
                        <td>@item.ContactInfo</td>
                        <td>@item.ProductCount items</td>
                        <td class="text-end">
                            <form asp-action="Restore" asp-route-id="@item.SupplierId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-success" title="Restore to Active List">
                                    <i class="fa-solid fa-trash-arrow-up me-1"></i> Restore
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr><td colspan="4" class="text-center py-4">No archived suppliers found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-muted small">Page @Model.PageIndex of @Model.TotalPages</span>
    <div>
        <a asp-action="Archives" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-secondary @prevDisabled">Previous</a>
        <a asp-action="Archives" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-secondary @nextDisabled">Next</a>
    </div>
</div>