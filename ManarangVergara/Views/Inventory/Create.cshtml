@model ManarangVergara.Models.ProductFormViewModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h2 class="mb-4 fw-bold"><i class="fa-solid fa-cart-plus me-2 text-primary"></i>Add New Product</h2>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-primary text-white fw-bold">
                                <i class="fa-solid fa-tag me-2"></i>Master Details
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">Product Name *</label>
                                    <input asp-for="Name" class="form-control" placeholder="e.g., Bioflu" autofocus />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="CategoryId" class="form-label fw-bold">Category *</label>
                                        <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select">
                                            <option value="">- Select -</option>
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="SupplierId" class="form-label fw-bold">Supplier *</label>
                                        <select asp-for="SupplierId" asp-items="Model.SupplierList" class="form-select">
                                            <option value="">- Select -</option>
                                        </select>
                                        <span asp-validation-for="SupplierId" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Manufacturer" class="form-label fw-bold">Manufacturer *</label>
                                    <input asp-for="Manufacturer" class="form-control" placeholder="e.g., Unilab" />
                                    <span asp-validation-for="Manufacturer" class="text-danger small"></span>
                                </div>
                                <div class="mb-0">
                                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional details..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card shadow-sm h-100 border-success">
                            <div class="card-header bg-success text-white fw-bold">
                                <i class="fa-solid fa-boxes-packing me-2"></i>Initial Stock Batch
                            </div>
                            <div class="card-body bg-light">
                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="BatchNumber" class="form-label fw-bold">Batch No. *</label>
                                        <input asp-for="BatchNumber" class="form-control" />
                                        <span asp-validation-for="BatchNumber" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="ExpiryDate" class="form-label fw-bold">Expiry Date *</label>
                                        <input asp-for="ExpiryDate" class="form-control" type="date" />
                                        <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label asp-for="Quantity" class="form-label fw-bold">Initial Quantity *</label>
                                    <input asp-for="Quantity" class="form-control form-control-lg" type="number" min="0" />
                                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                                </div>
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <label asp-for="CostPrice" class="form-label fw-bold">Cost (₱) *</label>
                                        <div class="input-group">
                                            <span class="input-group-text">₱</span>
                                            <input asp-for="CostPrice" class="form-control" type="number" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="CostPrice" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="SellingPrice" class="form-label fw-bold">SRP (₱) *</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-success text-white">₱</span>
                                            <input asp-for="SellingPrice" class="form-control fw-bold" type="number" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="SellingPrice" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-lg btn-outline-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-lg btn-primary px-5 fw-bold">
                        <i class="fa-solid fa-check me-2"></i> Save Product
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>