@model ManarangVergara.Models.ProductFormViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Edit Product Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ProductId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Product Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label asp-for="Quantity" class="form-label fw-bold">Total Stock</label>
                                <input asp-for="Quantity" class="form-control bg-light" readonly />
                                <small class="text-muted" style="font-size: 0.75rem;">Use "Adjust Stock" to change.</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CostPrice" class="form-label fw-bold">Base Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">₱</span>
                                    <input asp-for="CostPrice" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="CostPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="SellingPrice" class="form-label fw-bold">SRP</label>
                                <div class="input-group">
                                    <span class="input-group-text">₱</span>
                                    <input asp-for="SellingPrice" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="SellingPrice" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                                <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SupplierId" class="form-label fw-bold">Supplier</label>
                                <select asp-for="SupplierId" asp-items="Model.SupplierList" class="form-select"></select>
                                <span asp-validation-for="SupplierId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Manufacturer" class="form-label fw-bold">Manufacturer</label>
                            <input asp-for="Manufacturer" class="form-control" />
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>