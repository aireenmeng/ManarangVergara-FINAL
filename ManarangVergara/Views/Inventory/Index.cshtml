@using ManarangVergara.Helpers
@model PaginatedList<ManarangVergara.Models.InventoryListViewModel>
@{
    ViewData["Title"] = "Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Inventory Master List</h2>
    <div>
        @if ((bool?)ViewData["ShowArchived"] == true)
        {
            <a asp-action="Index" asp-route-showArchived="false" class="btn btn-outline-secondary me-2">
                <i class="fa-solid fa-eye-slash me-1"></i>Hide Archived
            </a>
        }
        else
        {
            <a asp-action="Index" asp-route-showArchived="true" class="btn btn-outline-secondary me-2">
                <i class="fa-solid fa-box-archive me-1"></i>Show Archived
            </a>
        }

        @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("Manager"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus me-2"></i>Add New Product
            </a>
        }
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mb-3">
    <div class="card-body py-2">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
            <input type="hidden" name="showArchived" value="@ViewData["ShowArchived"]" />

            <div class="col-auto flex-grow-1">
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fa-solid fa-magnifying-glass"></i></span>
                    <input type="text" name="searchString" class="form-control" placeholder="Search products..." value="@ViewData["CurrentFilter"]" />
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark text-decoration-none">Product Name <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CatSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark text-decoration-none">Category <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th>Manufacturer</th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["StockSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark text-decoration-none">Total Stock <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark text-decoration-none">SRP (₱) <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["ExpirySortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark text-decoration-none">Next Expiry <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.Status == "Archived" ? "table-secondary text-muted" : "")">
                        <td class="fw-bold">@item.ProductName</td>
                        <td><span class="badge bg-light text-dark border">@item.CategoryName</span></td>
                        <td>@item.Manufacturer</td>
                        <td class="fw-bold">@item.Quantity</td>
                        <td class="text-success">₱@item.SellingPrice.ToString("N2")</td>
                        <td>@(item.ExpiryDate == DateOnly.MaxValue ? "-" : item.ExpiryDate.ToString("MMM dd, yyyy"))</td>
                        <td>
                            @if (item.Status == "Active")
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else if (item.Status == "Low Stock")
                            {

                                <span class="badge bg-warning text-dark">Low Stock</span>
                            }
                            else if (item.Status == "Out of Stock")
                            {

                                <span class="badge bg-secondary">Out of Stock</span>
                            }
                            else if (item.Status == "Expired")
                            {

                                <span class="badge bg-danger">Expired</span>
                            }
                            else if (item.Status == "Archived")
                            {

                                <span class="badge bg-dark">Archived</span>
                            }
                        </td>
                        <td class="text-nowrap">
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("Manager"))
                            {
                                @if (item.Status != "Archived")
                                {
                                    <a asp-action="History" asp-route-id="@item.ProductId" class="btn btn-sm btn-info text-white me-1" title="View History">
                                        <i class="fa-solid fa-clock-rotate-left"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary me-1" title="Edit Info/Price">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <button type="button" class="btn btn-sm btn-outline-warning me-1"
                                            data-bs-toggle="modal" data-bs-target="#adjustModal"
                                            onclick="setAdjustModal(@item.ProductId, '@item.ProductName', @item.Quantity)">
                                        <i class="fa-solid fa-right-left"></i>
                                    </button>

                                    <form asp-action="Delete" asp-route-id="@item.ProductId" method="post" style="display:inline;"
                                          onsubmit="return confirm('Archive @item.ProductName? It will be hidden from POS.');">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary" title="Archive">
                                            <i class="fa-solid fa-box-archive"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Unarchive" asp-route-id="@item.ProductId" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-success me-1" title="Restore">
                                            <i class="fa-solid fa-trash-arrow-up"></i>
                                        </button>
                                    </form>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-muted small">
        Showing Page @Model.PageIndex of @Model.TotalPages
    </span>
    <div>
        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-searchString="@ViewData["CurrentFilter"]"
           asp-route-showArchived="@ViewData["ShowArchived"]"
           class="btn btn-outline-primary @prevDisabled">
            <i class="fa-solid fa-chevron-left me-1"></i> Previous
        </a>
        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-searchString="@ViewData["CurrentFilter"]"
           asp-route-showArchived="@ViewData["ShowArchived"]"
           class="btn btn-outline-primary @nextDisabled">
            Next <i class="fa-solid fa-chevron-right ms-1"></i>
        </a>
    </div>
</div>

<div class="modal fade" id="adjustModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AdjustStock" method="post">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title"><i class="fa-solid fa-right-left me-2"></i>Adjust Stock</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="adjustProdId" />
                    <h5 class="fw-bold text-center mb-3" id="adjustProdName"></h5>
                    <p class="text-center text-muted">Current System Quantity: <strong id="adjustCurrentQty"></strong></p>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Adjustment Quantity</label>
                        <input type="number" name="adjustmentQty" class="form-control form-control-lg text-center" required placeholder="e.g. 10 (add) or -5 (remove)" />
                        <div class="form-text">Enter positive to ADD, negative to REMOVE.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Reason</label>
                        <input type="text" name="reason" class="form-control" required placeholder="e.g. Correction, Damaged, Delivery" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Adjustment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setAdjustModal(id, name, qty) {
        document.getElementById('adjustProdId').value = id;
        document.getElementById('adjustProdName').innerText = name;
        document.getElementById('adjustCurrentQty').innerText = qty;
    }
</script>