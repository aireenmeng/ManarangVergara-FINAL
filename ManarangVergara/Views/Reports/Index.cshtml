@using System.Text.Json
@model ManarangVergara.Models.ReportViewModel
@{
    ViewData["Title"] = "Business Intelligence";
}

<div class="d-flex justify-content-between align-items-center mb-4 no-print">
    <h2 class="fw-bold text-primary"><i class="fa-solid fa-chart-line me-2"></i>Business Reports</h2>
    <button onclick="window.print()" class="btn btn-dark"><i class="fa-solid fa-print me-2"></i>Print Report</button>
</div>

<div class="card shadow-sm mb-4 no-print">
    <div class="card-body py-2">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col-auto"><label class="fw-bold">Report Period:</label></div>
            <div class="col-auto"><input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" /></div>
            <div class="col-auto">to</div>
            <div class="col-auto"><input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" /></div>
            <div class="col-auto"><button type="submit" class="btn btn-primary">Update Data</button></div>
        </form>
    </div>
</div>

<ul class="nav nav-pills mb-3 no-print" id="reportTabs" role="tablist">
    <li class="nav-item"><button class="nav-link active" data-bs-toggle="pill" data-bs-target="#tab-sales"><i class="fa-solid fa-cash-register me-2"></i>Sales & Revenue</button></li>
    <li class="nav-item"><button class="nav-link" data-bs-toggle="pill" data-bs-target="#tab-inventory"><i class="fa-solid fa-boxes-stacked me-2"></i>Inventory Health</button></li>
    <li class="nav-item"><button class="nav-link" data-bs-toggle="pill" data-bs-target="#tab-profit"><i class="fa-solid fa-hand-holding-dollar me-2"></i>Profitability</button></li>
    <li class="nav-item"><button class="nav-link" data-bs-toggle="pill" data-bs-target="#tab-audit"><i class="fa-solid fa-shield-halved me-2"></i>Security & Audit</button></li>
</ul>

<div class="tab-content">

    <div class="tab-pane fade show active" id="tab-sales">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white fw-bold">Sales by Category</div>
                    <div class="card-body"><canvas id="categoryChart" style="max-height:250px;"></canvas></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white fw-bold">Top 5 Selling Products</div>
                    <div class="card-body table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Product</th><th>Sold</th><th class="text-end">Revenue</th></tr></thead>
                            <tbody>
                                @foreach (var item in Model.TopSellingProducts.Take(5))
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="fw-bold">@item.QuantitySold</td>
                                        <td class="text-end">₱@item.Revenue.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="tab-inventory">
        @if (Model.ShowFinancials)
        {
            <div class="alert alert-info">
                <h4 class="alert-heading"><i class="fa-solid fa-warehouse me-2"></i>Total Asset Value: <strong>₱@Model.TotalInventoryValue.ToString("N2")</strong></h4>
                <p>This represents the total cost of all stock currently sitting on shelves.</p>
            </div>
        }
        else
        {
            <div class="alert alert-secondary">
                <i class="fa-solid fa-lock me-2"></i> Financial asset values are restricted to Admin/Owner.
            </div>
        }
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">Near Expiry (Next 90 Days)</div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead><tr><th>Product</th><th>Expiry Date</th><th>Qty</th></tr></thead>
                    <tbody>
                        @foreach (var item in Model.NearExpiryItems)
                        {
                            <tr>
                                <td class="fw-bold">@item.ProductName</td>
                                <td class="text-danger fw-bold">@item.ExpiryDate.ToString("MMM dd, yyyy")</td>
                                <td>@item.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="tab-profit">

        @if (Model.ShowFinancials)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body text-center bg-success text-white rounded">
                    <h3>Gross Profit: ₱@Model.GrossProfit.ToString("N2")</h3>
                    <small>Total Revenue - Total Estimated Cost</small>
                </div>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header fw-bold">Product Performance</div> <div class="card-body table-responsive p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th class="text-end">Revenue</th>

                            @if (Model.ShowFinancials)
                            {
                                <th class="text-end">Cost</th>
                                <th class="text-end">Profit</th>
                                <th>Margin</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductProfitability)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td class="text-end">₱@item.Revenue.ToString("N2")</td>

                                @if (Model.ShowFinancials)
                                {
                                    <td class="text-end text-muted">₱@item.Cost.ToString("N2")</td>
                                    <td class="text-end fw-bold text-success">₱@item.Profit.ToString("N2")</td>
                                    <td><span class="badge bg-secondary">@item.MarginPercent.ToString("N0")%</span></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="tab-audit">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">Void Log (Selected Period)</div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover mb-0">
                    <thead><tr><th>Date</th><th>Cashier</th><th>Auth By</th><th>Amount</th><th>Reason</th></tr></thead>
                    <tbody>
                        @foreach (var item in Model.RecentVoids)
                        {
                            <tr>
                                <td>@item.VoidDate.ToString("MM/dd HH:mm")</td>
                                <td>@item.CashierName</td>
                                <td class="fw-bold">@item.ManagerName</td>
                                <td class="text-decoration-line-through">₱@item.TotalAmount.ToString("N2")</td>
                                <td class="text-danger">@item.Reason</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="print-only mt-5">
    <p>Generated By: <strong>@Model.GeneratedBy</strong> | Date: @Model.GeneratedAt.ToString("F")</p>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Visualize Sales by Category
        var ctx = document.getElementById('categoryChart').getContext('2d');
        var catNames = @Html.Raw(JsonSerializer.Serialize(Model.SalesByCategory.Select(x => x.Category)));
        var catValues = @Html.Raw(JsonSerializer.Serialize(Model.SalesByCategory.Select(x => x.TotalSales)));

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: catNames,
                datasets: [{ data: catValues, backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'] }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    </script>
    <style>
        @@media print {
            .no-print {
                display: none !important;
            }

            .tab-pane {
                display: block !important;
                opacity: 1 !important;
            }
            /* Show ALL tabs when printing */
            .card {
                border: 1px solid #ccc;
                margin-bottom: 20px;
                page-break-inside: avoid;
            }
        }
    </style>
}