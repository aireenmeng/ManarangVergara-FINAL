@using ManarangVergara.Helpers
@model PaginatedList<ManarangVergara.Models.Database.Employee>
@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>User Management</h2>
    @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
    {
        <div>
            <a asp-action="Pending" class="btn btn-warning me-2">
                <i class="fa-solid fa-clock me-2"></i>Pending Invites
            </a>
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-user-plus me-2"></i>New User</a>
        </div>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["UserSortParm"]" class="text-dark text-decoration-none">Username <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="text-dark text-decoration-none">Full Name <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["RoleSortParm"]" class="text-dark text-decoration-none">Role <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["ContactSortParm"]" class="text-dark text-decoration-none">Email <i class="fa-solid fa-sort ms-1 text-muted"></i></a></th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Username</td>
                        <td>@item.EmployeeName</td>
                        <td>
                            @if (item.Position == "Admin" || item.Position == "Owner")
                            {
                                <span class="badge bg-danger">@item.Position</span>
                            }
                            else if (item.Position == "Manager")
                            {

                                <span class="badge bg-warning text-dark">@item.Position</span>
                            }
                            else
                            {

                                <span class="badge bg-info text-dark">@item.Position</span>
                            }
                        </td>
                        <td>@item.ContactInfo</td>
                        <td class="text-end text-nowrap">
                            @{
                                // SECURITY LOGIC FOR UI
                                bool isManager = User.IsInRole("Manager");
                                // Managers can only touch Cashiers. They cannot touch Admin, Owner, or OTHER Managers.
                                bool canModify = !isManager || item.Position == "Cashier";

                                // Admins can touch everyone except Owner and other Admins
                                if (User.IsInRole("Admin") && (item.Position == "Admin" || item.Position == "Owner")) { canModify = false; }

                                // Owner can do anything
                                if (User.IsInRole("Owner")) { canModify = true; }
                            }

                            @if (canModify)
                            {
                                <form asp-action="SendResetLink" asp-route-id="@item.EmployeeId" method="post" style="display:inline;"
                                      onsubmit="return confirm('Send password reset link to @item.EmployeeName?');">
                                    <button type="submit" class="btn btn-sm btn-outline-warning me-1" title="Send Password Reset Email">
                                        <i class="fa-solid fa-key"></i>
                                    </button>
                                </form>

                                @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-outline-primary me-1" title="Edit Details">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <form asp-action="Deactivate" asp-route-id="@item.EmployeeId" method="post" style="display:inline;"
                                          onsubmit="return confirm('Change active status for @item.EmployeeName?');">
                                        @if (item.IsActive)
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Deactivate (Resign)">
                                                <i class="fa-solid fa-user-slash"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-success" title="Re-activate">
                                                <i class="fa-solid fa-user-check"></i>
                                            </button>
                                        }
                                    </form>
                                }
                            }
                            else
                            {
                                <span class="text-muted small fst-italic">Protected</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-muted small">Page @Model.PageIndex of @Model.TotalPages</span>
    <div>
        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-outline-primary @prevDisabled">Previous</a>
        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-outline-primary @nextDisabled">Next</a>
    </div>
</div>