@using ManarangVergara.Helpers
@model PaginatedList<ManarangVergara.Models.Database.Employee>
@{
    ViewData["Title"] = "Pending Invitations";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-warning"><i class="fa-solid fa-envelope-open-text me-2"></i>Pending Links</h2>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fa-solid fa-users me-2"></i>Back to Active Users
        </a>
        <a asp-action="Create" class="btn btn-primary ms-2">
            <i class="fa-solid fa-plus me-2"></i>Invite New
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Role</th>
                    <th>Sent By / Date</th>
                    <th>Expires In</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="fw-bold">@item.EmployeeName</span><br />
                            <small class="text-muted">@item.ContactInfo</small>
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                // if active, they are just resetting a password
                                <span class="badge bg-info text-dark"><i class="fa-solid fa-key me-1"></i>Reset Pass</span>
                            }
                            else
                            {
                                // if inactive, they are a new hire
                                <span class="badge bg-success"><i class="fa-solid fa-user-plus me-1"></i>Activation</span>
                            }
                        </td>
                        <td><span class="badge bg-secondary">@item.Position</span></td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.TokenSentBy))
                            {
                                <small class="fw-bold">@item.TokenSentBy</small>
                        
                                <br />
                                <small class="text-muted">@item.TokenSentDate?.ToString("MMM dd, hh:mm tt")</small>
                            }
                            else
                            {
                                <small class="text-muted">-</small>
                            }
                        </td>
                        <td>
                            @if (item.ResetTokenExpiry > DateTime.UtcNow)
                            {
                                var timeLeft = item.ResetTokenExpiry.Value - DateTime.UtcNow;
                                <span class="text-success small">@timeLeft.Hours hours left</span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold small">EXPIRED</span>
                            }
                        </td>
                        <td class="text-end">
                            <form asp-action="CancelInvite" asp-route-id="@item.EmployeeId" method="post" style="display:inline;"
                                  onsubmit="return confirm('@(item.IsActive ? "Cancel password reset link?" : "Permanently revoke and delete this invitation?")');">

                                @if (item.IsActive)
                                {
                                    // button for existing users (cancel reset)
                                    <button type="submit" class="btn btn-sm btn-warning" title="Cancel Password Reset">
                                        <i class="fa-solid fa-ban me-1"></i> Cancel Reset
                                    </button>
                                }
                                else
                                {
                                    // button for new users (revoke invite)
                                    <button type="submit" class="btn btn-sm btn-danger" title="Revoke Invitation">
                                        <i class="fa-solid fa-trash me-1"></i> Revoke Invite
                                    </button>
                                }
                            </form>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr><td colspan="6" class="text-center py-4 text-muted">No pending links found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-muted small">Page @Model.PageIndex of @Model.TotalPages</span>
    <div>
        <a asp-action="Pending" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-outline-secondary @prevDisabled">Previous</a>
        <a asp-action="Pending" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-outline-secondary @nextDisabled">Next</a>
    </div>
</div>