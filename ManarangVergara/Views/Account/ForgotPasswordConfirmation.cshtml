@{
    ViewData["Title"] = "Check Your Email";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow border-success">
            <div class="card-body text-center p-5">
                <i class="fa-solid fa-envelope-circle-check fa-4x text-success mb-3"></i>
                <h2 class="fw-bold text-success">Check Your Email</h2>
                <p class="lead text-muted mt-3">
                    If an account exists for that email, we have sent instructions to reset your password.
                </p>
                <p class="small text-muted">
                    Please check your inbox (and spam folder). The link will expire in 24 hours.
                </p>

                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-primary px-4">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>