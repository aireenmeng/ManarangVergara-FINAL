@model IEnumerable<ManarangVergara.Models.VoidHistoryViewModel>
@{
    ViewData["Title"] = "Voided Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Voided Transactions Log</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left me-2"></i>Back to Sales History
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Txn ID</th>
                    <th>Voided Date</th>
                    <th>Original Cashier</th>
                    <th>Voided By (Manager)</th>
                    <th>Amount</th>
                    <th>Reason</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">#@item.TransactionId</td>
                        <td>@item.VoidDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                        <td>@item.CashierName</td>
                        <td class="text-danger fw-bold">@item.ManagerName</td>
                        <td class="text-success">₱@item.TotalAmount.ToString("N2")</td>
                        <td>@item.Reason</td>
                    </tr>
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            No voided transactions found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>