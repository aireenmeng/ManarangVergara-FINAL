@model ManarangVergara.Models.Database.Transaction
@{
    ViewData["Title"] = "Transaction Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left me-2"></i>Back to List</a>
                    @if ((User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("Manager")) && Model.Status == "Completed")
                    {
                        <form asp-action="Void" asp-route-id="@Model.SalesId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to VOID this transaction? Stock will be returned.');">
                            <button type="submit" class="btn btn-danger ms-2"><i class="fa-solid fa-ban me-2"></i>VOID TRANSACTION</button>
                        </form>
                    }
                </div>
                <button onclick="window.print()" class="btn btn-primary"><i class="fa-solid fa-print me-2"></i>Print Receipt</button>
            </div>

            <div class="card shadow-lg printable-area">
                <div class="card-header bg-white text-center py-4">
                    <h2 class="fw-bold mb-0">💊 MedTory Pharmacy</h2>
                    <p class="text-muted mb-0">Official Sales Receipt</p>
                </div>
                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-6">
                            <h5 class="fw-bold text-primary">Transaction #@Model.SalesId</h5>
                            <p class="mb-0"><strong>Date:</strong> @Model.SalesDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                            <p class="mb-0">
                                <strong>Status:</strong>
                                @if (Model.Status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {

                                    <span class="badge bg-danger">@Model.Status</span>
                                }
                            </p>
                        </div>
                        <div class="col-6 text-end">
                            <p class="mb-0"><strong>Cashier:</strong> @Model.Employee.EmployeeName</p>
                            <p class="mb-0"><strong>Payment:</strong> @Model.PaymentMethod</p>
                        </div>
                    </div>

                    <table class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SalesItems)
                            {
                                <tr>
                                    <td class="fw-bold">@item.Product.Name</td>
                                    <td class="text-center">@item.QuantitySold</td>
                                    <td class="text-end">₱@item.Price.ToString("N2")</td>
                                    <td class="text-end fw-bold">₱@((item.Price * item.QuantitySold).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="fs-4">
                                <td colspan="3" class="text-end fw-bold">GRAND TOTAL:</td>
                                <td class="text-end fw-bold text-success">₱@Model.TotalAmount.ToString("N2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="card-footer text-center text-muted py-3">
                    Thank you for purchasing from MedTory!
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        body *

    {
        visibility: hidden;
    }

    .printable-area, .printable-area * {
        visibility: visible;
    }

    .printable-area {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        box-shadow: none !important;
    }

    .btn {
        display: none !important;
    }
    /* Hide buttons when printing */
    }
</style>